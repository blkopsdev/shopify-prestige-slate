<script type="text/javascript">
jQuery( document ).ready(function() {
  $(".ProductForm__AddToCart, .ProductForm__AddToCart span, .shopify-payment-button").click(function(){

    fbq('track', 'AddToCart', { currency: '{{shop.currency}}', content_ids: ['{{product.id}}'], content_name: '{{product.title}}', value: {{ product.price | money_without_currency }}, content_type: 'product'});

  });
  
});  
</script>
