{%- capture flickity_config -%}
{
  "wrapAround": true,
  "pageDots": false,
  "setGallerySize": false,
  "prevNextButtons": true,
  "arrowShape": {"x0": 20, "x1": 60, "y1": 40, "x2": 60, "y2": 35, "x3": 25}
}
{%- endcapture -%}

<section class="Section Section--spacingNormal" data-section-id="{{ section.id }}" data-section-type="instagram">
  {%- if section.settings.subheading != blank or section.settings.title != blank -%}
    <section class="SectionHeader SectionHeader--center">
      <div class="Container">

        {% comment %} {%- if section.settings.title != blank -%}
          <h2 class="Section__Heading Heading instagram-title">{{ section.settings.title | escape }}</h2>
        {%- endif -%} {% endcomment %}


        {% comment %}<h3 class="instagram-title">#VITACLEANHQ</h3>{% endcomment %}
        {% comment %} <svg id="instagram-svg" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 87.79">
          <defs>
            <style>
              .cls-1 {
                font-size: 84.26px;
                fill: #cafdff;
                font-family: Lato-Bold, Lato;
                font-weight: 700;
              }

              .cls-2 {
                letter-spacing: -0.07em;
              }

              .cls-3 {
                letter-spacing: -0.03em;
              }
            </style>
          </defs>
          <text class="cls-1" transform="translate(0 72.59)">#VITACLEANHQ</text>
        </svg> {% endcomment %}


        {%- if section.settings.subheading != blank -%}
          <h3 class="Section__SubHeading Heading instagram-sub-title">{{ section.settings.subheading | escape }}</h3>
        {%- endif -%}
        
      </div>
    </section>
  {%- endif -%}

  {%- if section.settings.access_token != blank -%}
    <div class="Instafeed Carousel Carousel--fixed" data-access-token="{{ section.settings.access_token }}" data-image-count="{{ section.settings.image_count }}" data-flickity-config='{{ flickity_config }}'></div>
  {%- else -%}
    {%- comment -%}If no images, we display some placeholder content{%- endcomment -%}
    <div class="Instafeed Carousel Carousel--fixed" data-flickity-config='{{ flickity_config }}'>
      {%- for i in (1..8) -%}
        <div class="Carousel__Cell Instafeed__Cell">
          <a href="#" class="Instafeed__Link PlaceholderBackground">
            {{ 'image' | placeholder_svg_tag: 'Instafeed__Image PlaceholderBackground__Svg PlaceholderSvg--dark' }}
          </a>
        </div>
      {%- endfor -%}
    </div>
  {%- endif -%}
  
  {%- if section.settings.button_text != blank -%}
    <div class="SectionFooter">
      <a href="{{ section.settings.button_url }}" class="Button Button--primary" target="_blank" rel="noopener">{{ section.settings.button_text | escape }}</a>
    </div>
  {%- endif -%}
</section>

{% schema %}
{
  "name": "Instagram feed",
  "class": "shopify-section--bordered",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub-heading",
      "default": "@YourStore"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Follow us"
    },
    {
      "type": "text",
      "id": "access_token",
      "label": "Access token",
      "info": "[Find your access token](http://www.maestrooo.com/instagram)."
    },
    {
      "type": "range",
      "id": "image_count",
      "min": 6,
      "max": 20,
      "step": 1,
      "label": "Image count",
      "default": 15
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "category": "Social media",
      "name": "Instagram feed",
      "settings": {}
    }
  ]
}
{% endschema %}