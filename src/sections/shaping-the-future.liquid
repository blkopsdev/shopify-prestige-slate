 <section class="Section Section--spacingNormal" data-section-id="{{ section.id }}">
  <div class="Container shaping-the-future stf">
    
    <h3 class="stf-title">{{ section.settings.title }}</h3>

    <div class="Grid Grid--m Grid--center">

      <div class="stf-description Grid__Cell 2/2--mobile 2/2--tablet 1/2--lap-and-up">
        <div class="stf-description-copy Grid__Cell 2/2--mobile 2/2--tablet 1/2--lap-and-up">
        <ul>
          <li class="stf-proud">
            <h4 class="stf-description__title u-h2"> {{ section.settings.description-1-title }} </h4>
            <p class="stf-description__copy u-h4"> {{ section.settings.description-1-copy }} </p>
          </li>
          <li class="stf-foundation">
            <h4 class="stf-description__title u-h2"> {{ section.settings.description-2-title }} </h4>
            <p class="stf-description__copy u-h4"> {{ section.settings.description-2-copy }} </p>
          </li>
          <li class="stf-support">
            <h4 class="stf-description__title u-h2"> {{ section.settings.description-3-title }} </h4>
            <!-- <p class="stf-description__copy">XXX</p> -->
          </li>
          <li class="stf-stop">
            <h4 class="stf-description__title u-h2"> {{ section.settings.description-4-title }} </h4>
            <!-- <p class="stf-description__copy">XXX</p> -->
          </li>
        </ul>
        <a href="{{ section.settings.description-cta-url }}" class="stf-description-link Button Button--primary">More info</a>
        </div>
        
        <div class="stf__meet-founders Grid__Cell 2/2--mobile 2/2--tablet 1/2--lap-and-up">
          <div class="">
            <h4>Meet the Founders</h4>
            <p>Meet the 2 girls disrupting the shower head business, Sara & Kristina and what inspired Vitaclean.</p>
            <span>@kristinavelkova</span></br>
            <span>@sarakdouglas</span></br>
            <a href="" class="Link Link--underline">Learn more</a>
          </div>
        </div>
      </div>

      <div class=" Grid__Cell 2/2--mobile 2/2--tablet 1/2--lap-and-up hidden-tablet">
        
        <div class="stf-image">
          <img class="Image--fadeIn Image--lazyLoaded" src="{{ section.settings.image | img_url : "master" }}" alt="">
        </div>
      </div>

    </div>

  </div> 
</section> 

<style></style>


